{% extends "layouts/base.jinja" %}
{% block content %}
<section class="section-contact personal-tab-4" id="contact">
    <div class="contact-container">
    <h2 class="personal-h2 ">Contacter</h2>

    <div class="personal-form">
        <div class="personal-form-row">
            <div class="personal-form-group">
                <h4 class="personal-form-h4-title">Formulaire de contact</h4>
                <input class="personal-form-input" type="text" id="prenom" placeholder="Vôtre prénom"/>
                <span id="messagePrenom" class="text-danger"></span>
                <input class="personal-form-input" type="text" id="nom" placeholder="Vôtre nom"/>
                <span class="text-danger" id="messageNom"></span>
                <input class="personal-form-input" type="email" id="email" placeholder="Vôtre e-mail"/>
                <span class="text-danger" id="messageEmail"></span>
                <textarea class="personal-form-textarea" rows="5" type="text" id="message" placeholder="Vôtre message"></textarea>
                <span class="text-danger" id="messageMessage"></span>
                <br>
                <button class="personal-form-button" id="form-contact" type="submit">Soumettre</button>
            </div>
            <div class="personal-form-group">
                <h4 class="personal-form-h4-title">Emplacement</h4>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d328993.22712495405!2d2.0762044329800626!3d49.893929620699076!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e78413d78b760b%3A0x40af13e816220e0!2sAmiens!5e0!3m2!1sfr!2sfr!4v1630771984469!5m2!1sfr!2sfr" width="550" height="400" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                <div class="personal-form-reseau">
                    <h4 class="personal-form-h4-title">Suivez-moi sur les réseaux</h4>
                    <a href="#" class="form-group-a"><span class="fab fa-instagram-square"></span></a>
                    <a href="#" class="form-group-a"><span class="fab fa-facebook"></span></a>
                    <a href="https://www.linkedin.com/in/oceancefourdain/" target="_blank" class="form-group-a"><span class="fab fa-linkedin"></span></a>
                    <div class="navbar text-center ">
                        <p class="" >Site fait par océance</p><br>
                        <p class="">© 2021</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
    </div>
